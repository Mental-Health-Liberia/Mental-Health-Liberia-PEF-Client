{
  "tabs": [
    {
      "name": "basic",
      "title": "Basic Configuration",
      "fieldsets": [
        {
          "title": "Patient",
          "elements": [
            {
              "name": "patient_id",
              "title": "Patient ID",
              "type": "patient_id"
            },
            {
              "name": "referral_source",
              "title": "Referral Source",
              "type": "select",
              "options": [
                "Clinician",
                "Messages",
                "Other",
                "No response"
              ]
            }
          ]
        },
        {
          "title": "Clinician",
          "elements": [
            {
              "name": "clinician_id",
              "title": "Clinician ID",
              "type": "text",
              "rules": {
                "number": true,
                "required": true
              }
            },
            {
              "name": "clinician_training",
              "title": "Clinician Training Level",
              "type": "select",
              "options": [
                "No formal training",
                "Community health worker training",
                "Physician's assistant training",
                "General clinician training",
                "Psychchiatric clinician training",
                "Other",
                "No response"
              ]
            }
          ]
        },
        {
          "title": "Visit",
          "elements": [
            {
              "name": "service_location",
              "title": "Location of Service",
              "type": "text",
              "placeholder": "Clinic or Hospital Name"
            },
            {
              "name": "date",
              "title": "Date of Service",
              "type": "datepicker"
            },
            {
              "name": "time",
              "title": "Time of Service",
              "type": "timepicker"
            },
            {
              "name": "reason",
              "title": "Reason for Visit",
              "type": "radio",
              "value": "seeking",
              "options": [
                {
                  "title": "Seeking Mental Health Care",
                  "name": "seeking"
                },
                {
                  "title": "Other",
                  "name": "other"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "name": "demographics",
      "title": "Demographics",
      "fieldsets": [
        {
          "title": "Patient",
          "elements": [
            {
              "name": "age",
              "title": "Age (years)",
              "type": "text",
              "rules": {
                "number": true,
                "required": true
              }
            },
            {
              "name": "life_role_days",
              "title": "Number of Days in Life Role",
              "type": "text",
              "rules": {
                "number": true,
                "required": true
              }
            },
            {
              "name": "distance_travelled_to_clinic",
              "title": "Distance Travelled to Clinic (kilometers)",
              "type": "text",
              "rules": {
                "number": true,
                "required": true
              }
            },
            {
              "name": "country_of_residence",
              "title": "Country of Residence",
              "type": "select",
              "options": [
                "Bomi",
                "Bong",
                "Gbarpolo",
                "Grand Bassa",
                "Grand Cape Mount",
                "Grand Gedah",
                "Grand Kru",
                "Lofa",
                "Margibi",
                "Maryland",
                "Montserrado",
                "Nimba",
                "River Cess",
                "River Gee",
                "Sinoe",
                "Other"
              ]
            },
            {
              "name": "marital_status",
              "title": "Marital Status",
              "type": "select",
              "options": [
                "Single / Never Married",
                "Married",
                "Divorced",
                "Windowed",
                "No Response"
              ]
            },
            {
              "name": "education",
              "title": "Education",
              "type": "select",
              "options": [
                "No Formal Education",
                "Grade / Primary School",
                "High School",
                "Some University",
                "University",
                "No Response"
              ]
            }
          ]
        }
      ]
    }   
  ]
}